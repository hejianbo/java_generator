<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{ mapper_package_name }}.{{ mapper_class_name }}">
  <resultMap id="BaseResultMap" type="{{ entity_package_name }}.{{ entity_class_name }}">
    <id column="category_id" jdbcType="INTEGER" property="categoryId" />
    <id column="language_id" jdbcType="INTEGER" property="languageId" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="meta_title" jdbcType="VARCHAR" property="metaTitle" />
    <result column="meta_description" jdbcType="VARCHAR" property="metaDescription" />
    <result column="meta_keyword" jdbcType="VARCHAR" property="metaKeyword" />
    <result column="description" jdbcType="LONGVARCHAR" property="description" />
  </resultMap>

  <sql id="BaseTableName">
    {{ table_name }} as base
  </sql>

  <sql id="BaseColumns">

  </sql>

  <insert id="insertSelective" parameterType="jmall.pms.service.dao.entity.CategoryDescriptionEntity"
        keyColumn="" useGeneratedKeys="true" keyProperty="">
    insert into <include refid="BaseTableName" /> (category_id, language_id, name,
      meta_title, meta_description, meta_keyword,
      description)
    values (#{categoryId,jdbcType=INTEGER}, #{languageId,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},
      #{metaTitle,jdbcType=VARCHAR}, #{metaDescription,jdbcType=VARCHAR}, #{metaKeyword,jdbcType=VARCHAR},
      #{description,jdbcType=LONGVARCHAR})
  </insert>

  <select id="selectByPrimaryKey" parameterType="map" resultMap="BaseResultMap">
    select
        <include refid="BaseColumns" />
    from <include refid="BaseTableName" />
    where
        category_id = #{categoryId,jdbcType=INTEGER}
        and language_id = #{languageId,jdbcType=INTEGER}
  </select>
</mapper>